SELECT * FROM marvel;


--Display a list of stronguest fighters.
Select name as Stronguest from marvel where fighting_skills >= 7;

--Average intelligence for all characters.
Select max(intelligence) from marvel;

--Characters who are the fastest and most durable.
Select name from marvel where speed and durability > 5;

--Shortest character.
Select min(height_m) from marvel;

--Display the most popular characters grouped by their height.
Select * from marvel where popularity > 10 order by height_m asc;

--Rating characters based on their strength.
Select name, alignment, hometown, strength,
CASE
When strength > 6 Then 'Better'
When strength <=3 Then 'Average'
Else 'Good'
END As Overall_Rating
From Marvel
order by strength
